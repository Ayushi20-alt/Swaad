<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/white"
    android:layout_width="411dp"
    android:layout_height="96dp">

    <TextView
        android:id="@+id/textView27"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="9dp"
        android:fontFamily="@font/poppins_medium"
        android:lineHeight="24dp"
        android:text="Waffle"
        android:textColor="@color/black"
        android:textFontWeight="500"
        android:textSize="16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView28"
        android:layout_width="75dp"
        android:layout_height="15dp"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="16dp"
        android:lineHeight="15dp"
        android:text="In Main Course"
        android:textColor="#B18000"
        android:textFontWeight="400"
        android:textSize="10sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView27" />

    <TextView
        android:id="@+id/textView29"
        android:layout_width="75dp"
        android:layout_height="14dp"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="16dp"
        android:fontFamily="@font/poppins_medium"
        android:lineHeight="13.5dp"
        android:text="\u20B9300.00"
        android:textColor="@color/black"
        android:textFontWeight="500"
        android:textSize="9sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView28" />

    <TextView
        android:layout_width="50dp"
        android:layout_height="16dp"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="4dp"
        android:layout_marginBottom="12dp"
        android:background="#FFF3AD"
        android:gravity="center"
        android:lineHeight="12dp"
        android:text="Bestseller"
        android:textColor="#956B00"
        android:textFontWeight="400"
        android:textSize="8sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView29"
        app:layout_constraintVertical_bias="0.0"
        tools:ignore="SmallSp" />

    <ImageView
        android:id="@+id/imageView11"
        android:layout_width="104dp"
        android:layout_height="66dp"
        android:layout_marginTop="6dp"
        android:layout_marginEnd="16dp"
        android:layout_marginRight="16dp"
        android:scaleType="centerInside"
        android:src="@drawable/food1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:layout_width="74dp"
        android:layout_height="24dp"
        android:layout_marginBottom="8dp"
        android:background="@drawable/button_bg"
        android:backgroundTint="#FFF8D2"
        android:gravity="center"
        android:lineHeight="18dp"
        android:text="ADD"
        android:textColor="#E8BB46"
        android:textFontWeight="700"
        android:textSize="10sp"
        android:padding="0.001dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/imageView11"
        app:layout_constraintStart_toStartOf="@+id/imageView11"
        tools:ignore="SmallSp" />

</androidx.constraintlayout.widget.ConstraintLayout>